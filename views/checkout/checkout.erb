
<div class="row">
	<% if @price > 0 %>
		<h1 class="checkout-title">You are almost there! Keep going!</h1>
		<div class="col-xs-12 col-sm-8">
			<form class="form-horizontal checkoutForm" method="post" action="/checkout/start">
	          <fieldset>
	            <div class="form-group">
	              <label for="inputCity" class="col-lg-2 control-label">City</label>
	              <div class="col-lg-10">
	                <input type="text" class="form-control" id="inputCity" placeholder="Sofia" name="city">
	              </div>
	            </div>
	            <div class="form-group">
	              <label for="inputAdress" class="col-lg-2 control-label">Address</label>
	              <div class="col-lg-10">
	                <input type="text" class="form-control" id="inputAdress" placeholder="Student City 51b 701" name="address">
	              </div>
	            </div>
	            <div class="form-group">
	              <div class="col-lg-10 col-lg-offset-2">
	          		<input type="hidden" name="price" value="<%= @price %>">

	                <button type="submit" class="btn btn-primary buyBtn" id="buy-button">Buy</button>
	              </div>
	            </div>
	          </fieldset>
	        </form>
		</div>

		<div class="col-xs-12 col-sm-4">
			<h3 class="checkout-cart-title">Your Cart</h3>
			<% @uproducts.each do |uproduct| %>
				<div class="checkout-cart-wrapper">
					<div class="col-xs-12 col-sm-5 img-wrapper">
						<img class="checkout-cart-img" src="<%= uproduct.product.image %>">
					</div>
					<div class="col-xs-12 col-sm-5">
						<span class="checkout-cart-name"><%= uproduct.product.name %></span>
						<span class="checkout-cart-size"><%= uproduct.size %></span>
					</div>
					<div class="col-xs-12 col-sm-2">
						<span class="checkout-cart-price"><%= uproduct.quantity %></span>
					</div>
				</div>	
			<% end %>
			<div class="col-xs-12">
				<span>Price: $<%= @price %></span>
			</div>
		</div>

	<% else %>
		<h1 class="checkout-title">Sorry, but you don't have any items in the basket!</h1>
	<% end %>



</div>
